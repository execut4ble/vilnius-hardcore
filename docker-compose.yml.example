services:
  db:
    image: postgres
    restart: always
    ports:
      - 5432:5432
    environment:
      POSTGRES_USER: root
      POSTGRES_PASSWORD: mysecretpassword
      POSTGRES_DB: local
      POSTGRES_EXTENSIONS: unaccent
    volumes:
      - ./init.sql:/docker-entrypoint-initdb.d/init.sql
      - ./post-init.sql:/docker-entrypoint-initdb.d/post-init.sql
